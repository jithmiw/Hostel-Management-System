<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="stackPane" styleClass="roundPane"
           stylesheets="@/hostel/view/asset/style/Style.css" xmlns="http://javafx.com/javafx/8.0.171"
           fx:controller="hostel.controller.LoginFormController">
    <children>
        <AnchorPane fx:id="rootPane" prefHeight="321.0" prefWidth="632.0" styleClass="roundPane"
                    stylesheets="@/hostel/view/asset/style/Style.css">
            <children>
                <ImageView fx:id="bgImage" fitHeight="321.0" fitWidth="632.0" pickOnBounds="true">
                    <image>
                        <Image url="@/hostel/view/asset/img/login.jpg"/>
                    </image>
                </ImageView>
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="321.0" layoutX="1.0" opacity="0.7"
                           stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="632.0"/>
                <Label layoutX="281.0" layoutY="8.0" text="Login">
                    <font>
                        <Font name="Calisto MT" size="28.0"/>
                    </font>
                </Label>
                <JFXTextField fx:id="txtUsername" labelFloat="true" layoutX="190.0" layoutY="72.0" prefHeight="31.0"
                              prefWidth="253.0" promptText="Username">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </JFXTextField>
                <JFXPasswordField fx:id="txtPassword" labelFloat="true" layoutX="190.0" layoutY="142.0"
                                  prefHeight="31.0" prefWidth="253.0" promptText="Password">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </JFXPasswordField>
                <JFXButton buttonType="RAISED" defaultButton="true" layoutX="190.0" layoutY="229.0"
                           onAction="#btnLoginClick" prefHeight="34.0" prefWidth="253.0" styleClass="loginButton"
                           stylesheets="@/hostel/view/asset/style/Style.css" text="Login" textFill="WHITE">
                    <font>
                        <Font name="System" size="15.0"/>
                    </font>
                </JFXButton>
                <JFXButton buttonType="RAISED" cancelButton="true" layoutX="190.0" layoutY="273.0"
                           onAction="#btnCancelClick" prefHeight="34.0" prefWidth="253.0" styleClass="loginButton"
                           stylesheets="@/hostel/view/asset/style/Style.css" text="Cancel" textFill="WHITE">
                    <font>
                        <Font name="System" size="15.0"/>
                    </font>
                </JFXButton>
                <JFXCheckBox fx:id="chBxPassword" checkedColor="#245242" layoutX="190.0" layoutY="186.0"
                             text="Show password"/>
                <JFXTextField fx:id="txtShowPwd" labelFloat="true" layoutX="190.0" layoutY="142.0" prefHeight="31.0"
                              prefWidth="253.0" promptText="Password">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </JFXTextField>
            </children>
        </AnchorPane>
    </children>
</StackPane>
